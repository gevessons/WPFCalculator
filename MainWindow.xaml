<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <!--Definir colunas e linha-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>
        
        <!--Definiremos os botões-->

        <Label Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"
               Grid.ColumnSpan="4"
               x:Name="resultadoLabel"
               />
        <Button x:Name="acBoton"
                Content="AC"
                Grid.Row="1"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="negativoBoton"
                Content="-/+"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="porcentagemBoton"
                Content="%"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <!--Botoões de operação-->
        <Button x:Name="divisionBoton"
                Click="OperacaoBoton_Click"
                Content="/"
                Grid.Row="1"
                Grid.Column="3"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="multiplicacaoBoton"
                Click="OperacaoBoton_Click"
                Content="*"
                Grid.Row="2"
                Grid.Column="3"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="menosBoton"
                Click="OperacaoBoton_Click"
                Content="-"
                Grid.Row="3"
                Grid.Column="3"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="maisBoton"
                Click="OperacaoBoton_Click"
                Content="+"
                Grid.Row="4"
                Grid.Column="3"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="igualBoton"
                Content="="
                Grid.Row="5"
                Grid.Column="3"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="pontoBoton"
                Content=","
                Grid.Row="5"
                Grid.Column="2"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        
        <!--Definiremos os números-->
        <Button x:Name="zeroBoton"
                Click="NumeroBoton_Click"
                Content="0"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                Grid.Column="0"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="umBoton"
                Click="NumeroBoton_Click"
                Content="1"
                Grid.Row="4"
                Grid.Column="0"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="doisBoton"
                Click="NumeroBoton_Click"
                Content="2"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="tresBoton"
                Click="NumeroBoton_Click"
                Content="3"
                Grid.Row="4"
                Grid.Column="2"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="quatroBoton"
                Click="NumeroBoton_Click"
                Content="4"
                Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="cincoBoton"
                Click="NumeroBoton_Click"
                Content="5"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="seisBoton"
                Click="NumeroBoton_Click"
                Content="6"
                Grid.Row="3"
                Grid.Column="2"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="seteBoton"
                Click="NumeroBoton_Click"
                Content="7"
                Grid.Row="2"
                Grid.Column="0"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="oitoBoton"
                Click="NumeroBoton_Click"
                Content="8"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />
        <Button x:Name="noveBoton"
                Click="NumeroBoton_Click"
                Content="9"
                Grid.Row="2"
                Grid.Column="2"
                Margin="5"
                FontWeight="Bold"
                FontSize="14"
            />

    </Grid>
</Window>
